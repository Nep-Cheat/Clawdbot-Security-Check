{
  "name": "Clawdbot Security Check",
  "version": "2.1.0",
  "description": "Self-security audit framework that teaches Clawdbot to audit its own configuration across 12 security domains. Knowledge-based, extensible, 100% read-only. Includes official ClawdHub security docs integration.",
  "author": "Gavin - Technical Co-Founder",
  "keywords": ["security", "audit", "clawdbot", "self-audit", "hardening", "vulnerability", "framework"],
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "SKILL.md",
  "scripts": {
    "start": "node security-check.js",
    "start:json": "node security-check.js --json",
    "test": "node security-check.js | grep -q 'SECURITY ANALYSIS' && echo 'Skill framework loaded'"
  },
  "permissions": ["read-only"],
  "safety": {
    "readOnly": true,
    "modifiesSettings": false,
    "networkAccess": false,
    "fileSystemAccess": ["read"],
    "installsPackages": false
  },
  "securityDomains": [
    "gateway-exposure",
    "dm-policy",
    "group-access-control",
    "credentials-security",
    "browser-control-exposure",
    "gateway-bind-network",
    "tool-access-elevated",
    "file-permissions-disk",
    "plugin-trust-model",
    "logging-redaction",
    "prompt-injection",
    "dangerous-commands"
  ],
  "severityLevels": ["critical", "high", "medium", "low"],
  "knowledgeFramework": true,
  "extensible": true
}
